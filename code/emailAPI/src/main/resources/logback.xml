<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>logs/emailAPI.log</file>
    <encoder>
      <pattern>[%d{dd/MM/yyyy hh:mm:ss:sss a z}] [%thread] [%5level] : %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FILE" />
  </appender> 

  <root level="WARN">
    <appender-ref ref="ASYNC" />
  </root>
</configuration>